@model ArtemisBanking.Application.ViewModels.Account.RestablecerContrasenaViewModel
@{
    ViewData["Title"] = "Restablecer Contraseña";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Artemis Banking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4">Nueva Contraseña</h2>

                        <form asp-action="RestablecerContrasena" method="post">
                            <input type="hidden" asp-for="UsuarioId" />
                            <input type="hidden" asp-for="Token" />

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="Contrasena" class="form-label"></label>
                                <input asp-for="Contrasena" class="form-control" type="password" />
                                <span asp-validation-for="Contrasena" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ConfirmarContrasena" class="form-label"></label>
                                <input asp-for="ConfirmarContrasena" class="form-control" type="password" />
                                <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Restablecer Contraseña</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>