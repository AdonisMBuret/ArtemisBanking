@model ArtemisBanking.Application.ViewModels.Account.ConfirmarCuentaViewModel 

@{
    ViewData["Title"] = "Confirmar Cuenta";
    Layout = null;
    var usuarioId = ViewData["userId"] as string ?? Context.Request.Query["userId"].ToString() ?? string.Empty;
    var token = ViewData["token"] as string ?? Context.Request.Query["token"].ToString() ?? string.Empty;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Artemis Banking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-logo">
                <i class="bi bi-check-circle" style="font-size: 2.5rem; color: var(--marron-principal);"></i>
                <h1 style="font-size: 1.6rem;">Confirmar Tu Cuenta</h1>
                <p>Activa tu cuenta para empezar a usar Artemis</p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-artemis-success">
                    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-artemis-error">
                    <i class="bi bi-x-circle"></i> @TempData["ErrorMessage"]
                </div>
            }

            <form asp-action="ConfirmarCuenta" method="post">
                <div class="mb-3">
                    <label class="form-label-artemis">ID de Usuario</label>
                    <input asp-for="UsuarioId" value="@usuarioId" class="form-control" readonly />
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label-artemis">Token de Confirmación</label>
                    <textarea asp-for="Token" class="form-control" rows="4" readonly>@token</textarea>
                    <span asp-validation-for="Token" class="text-danger"></span>
                </div>

                @if (!string.IsNullOrEmpty(usuarioId) && !string.IsNullOrEmpty(token))
                {
                    <div class="alert alert-artemis-success">
                        <i class="bi bi-check-circle"></i> Los datos ya están listos, solo confirma
                    </div>
                }
                else
                {
                    <div class="alert alert-artemis-info">
                        <i class="bi bi-info-circle"></i> Usa el enlace que te enviamos al correo
                    </div>
                }

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-artemis-primary">
                        <i class="bi bi-check-circle"></i> Confirmar Cuenta
                    </button>
                    <a asp-action="Login" class="btn btn-outline-artemis">
                        <i class="bi bi-arrow-left"></i> Volver al Login
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>