@{
    ViewData["Title"] = "Confirmación";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Obtener el mensaje desde ViewBag
    var mensaje = ViewBag.Mensaje as string ?? "Operación completada";
    var mostrarBotonLogin = ViewBag.MostrarBotonLogin as bool? ?? false;
}

<!-- ==================== PÁGINA DE MENSAJE/CONFIRMACIÓN ==================== -->
<div class="row justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-md-6 col-lg-5">
        <!-- Tarjeta de mensaje -->
        <div class="card-artemis text-center">
            <!-- Icono grande -->
            <div class="card-artemis-body p-5">
                @if (mensaje.Contains("exitosa") || mensaje.Contains("activada") || mensaje.Contains("confirmada"))
                {
                    <!-- Icono de éxito -->
                    <div class="mb-4">
                        <i class="fas fa-check-circle"
                           style="font-size: 5rem; color: var(--color-success);"></i>
                    </div>
                }
                else if (mensaje.Contains("error") || mensaje.Contains("inválido") || mensaje.Contains("vencido"))
                {
                    <!-- Icono de error -->
                    <div class="mb-4">
                        <i class="fas fa-times-circle"
                           style="font-size: 5rem; color: var(--color-danger);"></i>
                    </div>
                }
                else
                {
                    <!-- Icono informativo por defecto -->
                    <div class="mb-4">
                        <i class="fas fa-info-circle"
                           style="font-size: 5rem; color: var(--color-primary);"></i>
                    </div>
                }

                <!-- Título -->
                <h3 class="mb-4 text-primary-artemis">
                    @if (mensaje.Contains("exitosa") || mensaje.Contains("activada"))
                    {
                        <text>¡Operación Exitosa!</text>
                    }
                    else if (mensaje.Contains("error"))
                    {
                        <text>Ha ocurrido un error</text>
                    }
                    else
                    {
                        <text>Información</text>
                    }
                </h3>

                <!-- Mensaje principal -->
                <div class="alert alert-artemis mb-4"
                     style="background-color: var(--color-light); border-left: 4px solid var(--color-primary);">
                    <p class="mb-0" style="font-size: 1.1rem;">
                        @Html.Raw(mensaje.Replace("\n", "<br />"))
                    </p>
                </div>

                <!-- Botones de acción -->
                <div class="d-grid gap-2 col-md-8 mx-auto">
                    @if (mostrarBotonLogin)
                    {
                        <!-- Botón para ir al login -->
                        <a asp-controller="Account" asp-action="Login"
                           class="btn btn-primary-artemis">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Ir al Login
                        </a>
                    }
                    else
                    {
                        <!-- Botón para volver al inicio -->
                        <a asp-controller="Account" asp-action="Login"
                           class="btn btn-primary-artemis">
                            <i class="fas fa-home me-2"></i>
                            Volver al Inicio
                        </a>
                    }
                </div>
            </div>

            <!-- Footer con información adicional -->
            <div class="card-footer text-center py-3"
                 style="background-color: var(--color-light); border-top: 1px solid var(--color-gray);">
                <small class="text-muted">
                    <i class="fas fa-question-circle me-1"></i>
                    Si tienes problemas, contacta al administrador del sistema
                </small>
            </div>
        </div>
    </div>
</div>