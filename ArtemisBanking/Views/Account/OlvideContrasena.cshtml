@model ArtemisBanking.Web.ViewModels.Account.OlvideContrasenaViewModel

@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ==================== PÁGINA DE OLVIDO DE CONTRASEÑA ==================== -->
<div class="row justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-md-5 col-lg-4">
        <!-- Tarjeta principal -->
        <div class="card-artemis">
            <!-- Encabezado -->
            <div class="card-artemis-header text-center py-4">
                <i class="fas fa-key fa-3x mb-3"></i>
                <h3 class="mb-0">Recuperar Contraseña</h3>
            </div>

            <!-- Cuerpo del formulario -->
            <div class="card-artemis-body p-4">
                <!-- Texto explicativo -->
                <div class="alert alert-warning-artemis mb-4" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Instrucciones:</strong>
                    <p class="mb-0 mt-2" style="font-size: 0.9rem;">
                        Ingresa tu nombre de usuario. Si existe en nuestro sistema,
                        recibirás un correo electrónico con un token para restablecer tu contraseña.
                    </p>
                </div>

                <!-- Formulario -->
                <form asp-action="OlvideContrasena" method="post">
                    <!-- Validación general -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger-artemis"></div>

                    <!-- Campo: Nombre de Usuario -->
                    <div class="mb-4">
                        <label asp-for="NombreUsuario" class="form-label-artemis">
                            <i class="fas fa-user me-2"></i>Nombre de Usuario
                        </label>
                        <input asp-for="NombreUsuario"
                               class="form-control form-control-artemis"
                               placeholder="Ingrese su nombre de usuario"
                               autofocus />
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>

                    <!-- Botones -->
                    <div class="d-grid gap-2">
                        <!-- Botón enviar -->
                        <button type="submit" class="btn btn-primary-artemis">
                            <i class="fas fa-paper-plane me-2"></i>
                            Enviar Token de Recuperación
                        </button>

                        <!-- Botón volver -->
                        <a asp-action="Login" class="btn btn-outline-artemis">
                            <i class="fas fa-arrow-left me-2"></i>
                            Volver al Login
                        </a>
                    </div>
                </form>
            </div>

            <!-- Footer informativo -->
            <div class="card-footer text-center py-3" style="background-color: var(--color-light); border-top: 1px solid var(--color-gray);">
                <small class="text-muted">
                    <i class="fas fa-clock me-1"></i>
                    El token expira en 24 horas
                </small>
            </div>
        </div>

        <!-- Mensaje de seguridad -->
        <div class="text-center mt-3">
            <small class="text-muted">
                <i class="fas fa-shield-alt me-1"></i>
                Por razones de seguridad, no revelamos si el usuario existe
            </small>
        </div>
    </div>
</div>

<!-- ==================== SCRIPTS ==================== -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}