@model ArtemisBanking.Application.ViewModels.Account.OlvideContrasenaViewModel
@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Artemis Banking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-logo">
                <i class="bi bi-key" style="font-size: 2.5rem; color: var(--marron-principal);"></i>
                <h1 style="font-size: 1.6rem;">¿Olvidaste tu contraseña?</h1>
                <p>Te ayudamos a recuperarla</p>
            </div>

            <form asp-action="OlvideContrasena" method="post">
                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-artemis-error" role="alert">
                        <i class="bi bi-x-circle me-2"></i>
                        Revisa los datos
                    </div>
                }

                <div class="alert alert-artemis-info mb-3" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    Escribe tu usuario y te enviaremos un código
                </div>

                <div class="mb-4">
                    <label asp-for="NombreUsuario" class="form-label-artemis">
                        Tu Usuario
                    </label>
                    <input asp-for="NombreUsuario" class="form-control" 
                           placeholder="Ej: juan123" autofocus />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-artemis-primary">
                        <i class="bi bi-send-fill me-2"></i>Enviar Código
                    </button>
                    <a asp-action="Login" class="btn btn-outline-artemis">
                        <i class="bi bi-arrow-left me-2"></i>Volver
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>