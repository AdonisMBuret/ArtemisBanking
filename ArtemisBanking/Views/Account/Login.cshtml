@using ArtemisBanking.Application.ViewModels.Account

@model LoginViewModel
@{
    ViewData["Title"] = "Entrar";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Artemis Banking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-logo">
                <i class="bi bi-bank2" style="font-size: 2.5rem; color: var(--marron-principal);"></i>
                <h1>Artemis Banking</h1>
                <p>Sistema Bancario</p>
            </div>

            <form method="post">
                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-artemis-error" role="alert">
                        <i class="bi bi-x-circle me-2"></i>
                        Revisa los datos que pusiste
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="NombreUsuario" class="form-label-artemis">
                        Usuario
                    </label>
                    <input asp-for="NombreUsuario" class="form-control" placeholder="tu_usuario" autofocus />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Contrasena" class="form-label-artemis">
                        Contraseña
                    </label>
                    <input asp-for="Contrasena" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Recordarme" class="form-check-input" id="recordarme" />
                    <label asp-for="Recordarme" class="form-check-label" for="recordarme" style="font-size: 0.9rem;">
                        Recordarme
                    </label>
                </div>

                <button type="submit" class="btn btn-artemis-primary w-100 mb-3">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Entrar
                </button>

                <div class="text-center">
                    <a asp-action="OlvideContrasena" class="text-decoration-none" style="font-size: 0.9rem; color: var(--marron-principal);">
                        ¿Olvidaste tu contraseña?
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>