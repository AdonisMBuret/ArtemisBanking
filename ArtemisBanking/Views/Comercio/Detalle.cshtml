@model ArtemisBanking.Application.ViewModels.Comercio.DetalleComercioViewModel
@{
    ViewData["Title"] = "Detalle de Comercio";
}

<div class="container-artemis fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-shop"></i> Detalle del Comercio
        </h2>
        <a asp-action="Index" class="btn btn-outline-artemis">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <div class="card-artemis mb-4">
        <div class="card-header-artemis">
            <h5 class="mb-0">@Model.Nombre</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-1 text-muted">RNC:</p>
                    <p class="mb-3 fw-bold">@Model.RNC</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1 text-muted">Estado:</p>
                    <p class="mb-3">
                        @if (Model.EstaActivo)
                        {
                            <span class="badge-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge-danger">Inactivo</span>
                        }
                    </p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1 text-muted">Fecha de Creación:</p>
                    <p class="mb-3">@Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1 text-muted">Usuario Asociado:</p>
                    <p class="mb-3">
                        @if (Model.TieneUsuario)
                        {
                            <span class="badge-success">Sí</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="card-artemis">
        <div class="card-header-artemis">
            <h5 class="mb-0">Estadísticas</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-1 text-muted">Total de Consumos:</p>
                    <h4 class="mb-0" style="color: var(--marron-oscuro);">@Model.TotalConsumos</h4>
                </div>
                <div class="col-md-6">
                    <p class="mb-1 text-muted">Monto Total:</p>
                    <h4 class="mb-0" style="color: var(--marron-oscuro);">@Model.MontoTotalConsumos.ToString("C2")</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-artemis-secondary">
            <i class="bi bi-pencil"></i> Editar
        </a>
    </div>
</div>
