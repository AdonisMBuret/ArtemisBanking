@model ArtemisBanking.Application.ViewModels.Comercio.DetalleComercioViewModel
@{
    ViewData["Title"] = "Detalle de Comercio";
}

<div class="container-artemis fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-shop"></i> Detalle del Comercio
        </h2>
        <a asp-action="Index" class="btn btn-outline-artemis">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-artemis-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-artemis-error alert-dismissible fade show">
            <i class="bi bi-x-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card-artemis mb-4">
        <div class="card-header-artemis">
            <h5 class="mb-0">@Model.Nombre</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-1 text-muted">RNC:</p>
                    <p class="mb-3 fw-bold">@Model.RNC</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1 text-muted">Estado:</p>
                    <p class="mb-3">
                        @if (Model.EstaActivo)
                        {
                            <span class="badge-artemis-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge-artemis-danger">Inactivo</span>
                        }
                    </p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1 text-muted">Fecha de Creación:</p>
                    <p class="mb-3">@Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1 text-muted">Usuario Asociado:</p>
                    <p class="mb-3">
                        @if (Model.TieneUsuario)
                        {
                            <span class="badge-artemis-success"><i class="bi bi-check-circle"></i> Sí</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark"><i class="bi bi-exclamation-triangle"></i> No tiene usuario</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="card-artemis mb-4">
        <div class="card-header-artemis">
            <h5 class="mb-0">Estadísticas</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-1 text-muted">Total de Consumos:</p>
                    <h4 class="mb-0 text-artemis-primary">@Model.TotalConsumos</h4>
                </div>
                <div class="col-md-6">
                    <p class="mb-1 text-muted">Monto Total:</p>
                    <h4 class="mb-0 text-success">@Model.MontoTotalConsumos.ToString("C2")</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-artemis-secondary">
            <i class="bi bi-pencil"></i> Editar Comercio
        </a>

        @if (!Model.TieneUsuario)
        {
            <a asp-action="AsignarUsuario" asp-route-id="@Model.Id" class="btn btn-artemis-primary">
                <i class="bi bi-person-plus"></i> Asignar Usuario
            </a>
        }
    </div>
</div>
