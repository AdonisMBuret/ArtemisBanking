@model ArtemisBanking.Application.ViewModels.Comercio.EditarComercioViewModel
@{
    ViewData["Title"] = "Editar Comercio";
}

<div class="container-artemis fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-artemis">
                <div class="card-header-artemis">
                    <h3 class="mb-0"><i class="bi bi-pencil"></i> Editar Comercio</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-artemis-error">
                                <i class="bi bi-x-circle"></i> Revisa los campos marcados
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label-artemis">
                                Nombre del Comercio
                            </label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RNC" class="form-label-artemis">
                                RNC
                            </label>
                            <input asp-for="RNC" class="form-control" maxlength="11" />
                            <span asp-validation-for="RNC" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-artemis">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-artemis-primary">
                                <i class="bi bi-check-circle"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
