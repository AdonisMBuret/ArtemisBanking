@model ArtemisBanking.Application.ViewModels.Cliente.ConfirmarTransaccionViewModel
@{
    ViewData["Title"] = "Confirmar Envío";
}

<div class="container-artemis fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-artemis">
                <div class="card-header-artemis">
                    <h3 class="mb-0"><i class="bi bi-check-circle"></i> Confirmar Transacción</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-artemis-info">
                        <i class="bi bi-info-circle"></i> Revisa bien los datos antes de confirmar
                    </div>

                    <div class="mb-3">
                        <p class="mb-1 text-muted">Vas a enviar a:</p>
                        <p class="mb-0 fw-bold">@Model.NombreDestinatario @Model.ApellidoDestinatario</p>
                    </div>

                    <div class="mb-3">
                        <p class="mb-1 text-muted">Cuenta:</p>
                        <p class="mb-0 fw-bold">@Model.NumeroCuentaDestino</p>
                    </div>

                    <div class="mb-3">
                        <p class="mb-1 text-muted">Monto:</p>
                        <h3 class="mb-0" style="color: var(--marron-oscuro);">@Model.Monto.ToString("C2")</h3>
                    </div>

                    <form asp-action="ConfirmarTransaccionExpress" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="CuentaOrigenId" />
                        <input type="hidden" asp-for="NumeroCuentaDestino" />
                        <input type="hidden" asp-for="Monto" />

                        <div class="d-flex justify-content-between gap-2 mt-4">
                            <a asp-action="TransaccionExpress" class="btn btn-outline-artemis">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-artemis-primary">
                                <i class="bi bi-check-circle"></i> Confirmar Envío
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>