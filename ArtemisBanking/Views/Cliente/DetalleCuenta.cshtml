@model ArtemisBanking.Application.ViewModels.Cliente.DetalleCuentaClienteViewModel

@{
    ViewData["Title"] = "Detalle de Cuenta";
}

<div class="container-artemis fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-piggy-bank"></i> Mi Cuenta
        </h2>
        <a asp-action="Index" class="btn btn-outline-artemis">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <!-- Info de la Cuenta -->
    <div class="card-artemis mb-4">
        <div class="card-header-artemis">
            <h5 class="mb-0">Cuenta @Model.NumeroCuenta</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-1 text-muted">Tipo:</p>
                    @if (Model.EsPrincipal)
                    {
                        <span class="badge-artemis-primary">@Model.TipoCuenta</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@Model.TipoCuenta</span>
                    }
                </div>
                <div class="col-md-6">
                    <p class="mb-1 text-muted">Balance:</p>
                    <h3 class="mb-0" style="color: var(--marron-oscuro);">@Model.Balance.ToString("C2")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Transacciones -->
    <h4 class="mb-3">Movimientos</h4>
    
    @if (Model.Transacciones == null || !Model.Transacciones.Any())
    {
        <div class="alert alert-artemis-info">
            <i class="bi bi-info-circle"></i> No hay movimientos en esta cuenta
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-artemis">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Tipo</th>
                        <th>Monto</th>
                        <th>De/Para</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tx in Model.Transacciones)
                    {
                        var montoClase = tx.TipoTransaccion == "CREDITO" ? "text-success" : "text-danger";
                        var montoSigno = tx.TipoTransaccion == "CREDITO" ? "+" : "-";

                        <tr>
                            <td>@tx.FechaTransaccion.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (tx.TipoTransaccion == "CREDITO")
                                {
                                    <span class="badge-success">Entrada</span>
                                }
                                else
                                {
                                    <span class="badge-danger">Salida</span>
                                }
                            </td>
                            <td class="fw-bold @montoClase">@montoSigno @tx.Monto.ToString("C2")</td>
                            <td>
                                @if (tx.TipoTransaccion == "CREDITO")
                                {
                                    <small>De: @tx.Origen</small>
                                }
                                else
                                {
                                    <small>Para: @tx.Beneficiario</small>
                                }
                            </td>
                            <td>
                                @if (tx.EstadoTransaccion == "APROBADA")
                                {
                                    <span class="badge-success">OK</span>
                                }
                                else
                                {
                                    <span class="badge-danger">@tx.EstadoTransaccion</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>