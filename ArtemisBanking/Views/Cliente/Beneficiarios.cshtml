@model ArtemisBanking.Application.ViewModels.Cliente.ListaBeneficiariosViewModel
@{
    ViewData["Title"] = "Beneficiarios";
}

<div class="container-artemis fade-in">
    <h2 class="mb-4">
        <i class="bi bi-person-check"></i> Mis Beneficiarios
    </h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-artemis-error alert-dismissible fade show">
            <i class="bi bi-x-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-artemis-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Formulario Agregar -->
        <div class="col-md-4 mb-4">
            <div class="card-artemis">
                <div class="card-header-artemis">
                    <h5 class="mb-0">Agregar Nuevo</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AgregarBeneficiario" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="NumeroCuenta" class="form-label-artemis">Número de Cuenta</label>
                            <input type="text" 
                                   id="NumeroCuenta" 
                                   name="NumeroCuenta" 
                                   class="form-control" 
                                   placeholder="123456789" 
                                   maxlength="9"
                                   pattern="[0-9]{9}"
                                   required />
                            <small class="text-muted">9 dígitos</small>
                        </div>
                        <button type="submit" class="btn btn-artemis-primary w-100">
                            <i class="bi bi-plus-circle"></i> Agregar
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Lista Beneficiarios -->
        <div class="col-md-8">
            <h4 class="mb-3">Tus Beneficiarios</h4>
            @if (Model.Beneficiarios == null || !Model.Beneficiarios.Any())
            {
                <div class="alert alert-artemis-info">
                    <i class="bi bi-info-circle"></i> Aún no tienes beneficiarios guardados
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-artemis">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Cuenta</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Beneficiarios)
                            {
                                <tr>
                                    <td>@item.NombreBeneficiario @item.ApellidoBeneficiario</td>
                                    <td><strong>@item.NumeroCuentaBeneficiario</strong></td>
                                    <td>
                                        <form asp-action="EliminarBeneficiario" asp-route-id="@item.Id" method="post" 
                                              onsubmit="return confirm('¿Seguro que quieres eliminar este beneficiario?');" 
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}