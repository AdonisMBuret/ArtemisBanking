@model ArtemisBanking.Application.ViewModels.Cliente.TransferenciaEntreCuentasViewModel
@{
    ViewData["Title"] = "Transferir entre Cuentas Propias";
}

<div class="container-artemis fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card-artemis">
                <div class="card-header-artemis">
                    <h3 class="mb-0"><i class="bi bi-shuffle me-2"></i>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <p class="text-muted">Mueva dinero entre su cuenta principal y sus cuentas secundarias.</p>

                    <form asp-action="TransferirEntreCuentas" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-artemis-error" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="CuentaOrigenId" class="form-label-artemis"></label>
                            <select asp-for="CuentaOrigenId" class="form-select form-control-artemis" asp-items="Model.CuentasDisponibles">
                                <option value="">Seleccione cuenta origen...</option>
                            </select>
                            <span asp-validation-for="CuentaOrigenId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CuentaDestinoId" class="form-label-artemis"></label>
                            <select asp-for="CuentaDestinoId" class="form-select form-control-artemis" asp-items="Model.CuentasDisponibles">
                                <option value="">Seleccione cuenta destino...</option>
                            </select>
                            <span asp-validation-for="CuentaDestinoId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Monto" class="form-label-artemis"></label>
                            <input asp-for="Monto" class="form-control form-control-artemis" type="number" step="0.01" placeholder="Ej: 200.00" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-artemis">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-artemis-primary">
                                <i class="bi bi-check-circle-fill me-2"></i>Realizar Transferencia
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}