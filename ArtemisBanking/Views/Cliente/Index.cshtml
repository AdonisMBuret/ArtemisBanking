@model ArtemisBanking.Application.ViewModels.Cliente.HomeClienteViewModel

@{
    ViewData["Title"] = "Mis Productos";
}

<div class="container-artemis fade-in">
    <h2 class="mb-4">
        <i class="bi bi-house-door"></i> Mis Productos
    </h2>

    <!-- CUENTAS DE AHORRO -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3"><i class="bi bi-piggy-bank"></i> Cuentas de Ahorro</h4>
        </div>

        @if (Model.CuentasAhorro == null || !Model.CuentasAhorro.Any())
        {
            <div class="col-12">
                <div class="alert alert-artemis-info">
                    <i class="bi bi-info-circle"></i> No tienes cuentas de ahorro
                </div>
            </div>
        }
        else
        {
            @foreach (var cuenta in Model.CuentasAhorro.OrderByDescending(c => c.EsPrincipal))
            {
                <div class="col-md-6 mb-3">
                    <div class="card-artemis">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h5 class="mb-1">@cuenta.NumeroCuenta</h5>
                                    @if (cuenta.EsPrincipal)
                                    {
                                        <span class="badge-artemis-primary">@cuenta.TipoCuenta</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@cuenta.TipoCuenta</span>
                                    }
                                </div>
                                <a asp-action="DetalleCuenta" asp-route-id="@cuenta.Id" 
                                   class="btn btn-sm btn-outline-artemis">
                                    <i class="bi bi-eye"></i> Ver
                                </a>
                            </div>
                            <hr />
                            <p class="mb-1 text-muted">Disponible:</p>
                            <h3 class="mb-0" style="color: var(--marron-oscuro);">@cuenta.Balance.ToString("C2")</h3>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- PRÉSTAMOS -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3"><i class="bi bi-cash-coin"></i> Préstamos</h4>
        </div>

        @if (Model.Prestamos == null || !Model.Prestamos.Any())
        {
            <div class="col-12">
                <div class="alert alert-artemis-info">
                    <i class="bi bi-info-circle"></i> No tienes préstamos activos
                </div>
            </div>
        }
        else
        {
            @foreach (var prestamo in Model.Prestamos)
            {
                <div class="col-md-6 mb-3">
                    <div class="card-artemis">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h5 class="mb-1">Préstamo @prestamo.NumeroPrestamo</h5>
                                    @if (prestamo.EstaAlDia)
                                    {
                                        <span class="badge-success">Al día</span>
                                    }
                                    else
                                    {
                                        <span class="badge-danger">En mora</span>
                                    }
                                </div>
                                <a asp-action="DetallePrestamo" asp-route-id="@prestamo.Id" 
                                   class="btn btn-sm btn-outline-artemis">
                                    <i class="bi bi-eye"></i> Ver
                                </a>
                            </div>
                            <hr />
                            <p class="mb-1 text-muted">Pendiente:</p>
                            <h3 class="mb-1 text-danger">@prestamo.MontoPendiente.ToString("C2")</h3>
                            <small class="text-muted">
                                Cuotas: @prestamo.CuotasPagadas de @prestamo.TotalCuotas
                            </small>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- TARJETAS -->
    <div class="row">
        <div class="col-12">
            <h4 class="mb-3"><i class="bi bi-credit-card"></i> Tarjetas de Crédito</h4>
        </div>

        @if (Model.TarjetasCredito == null || !Model.TarjetasCredito.Any())
        {
            <div class="col-12">
                <div class="alert alert-artemis-info">
                    <i class="bi bi-info-circle"></i> No tienes tarjetas de crédito
                </div>
            </div>
        }
        else
        {
            @foreach (var tarjeta in Model.TarjetasCredito)
            {
                string ultimosCuatro = tarjeta.NumeroTarjeta.Length >= 4 
                    ? tarjeta.NumeroTarjeta.Substring(tarjeta.NumeroTarjeta.Length - 4) 
                    : tarjeta.NumeroTarjeta;

                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card-artemis">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h5 class="mb-1">**** @ultimosCuatro</h5>
                                    <small class="text-muted">Vence: @tarjeta.FechaExpiracion</small>
                                </div>
                                <a asp-action="DetalleTarjeta" asp-route-id="@tarjeta.Id" 
                                   class="btn btn-sm btn-outline-artemis">
                                    <i class="bi bi-eye"></i> Ver
                                </a>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-6">
                                    <small class="text-muted">Deuda:</small>
                                    <p class="mb-0 fw-bold text-danger">@tarjeta.DeudaActual.ToString("C2")</p>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Disponible:</small>
                                    <p class="mb-0 fw-bold" style="color: var(--marron-principal);">@tarjeta.CreditoDisponible.ToString("C2")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>