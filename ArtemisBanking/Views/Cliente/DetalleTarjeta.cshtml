@model ArtemisBanking.Application.ViewModels.Cliente.DetalleTarjetaClienteViewModel
@{
    ViewData["Title"] = "Detalle de Tarjeta";
    string ultimosCuatro = Model.NumeroTarjeta.Length >= 4 
        ? Model.NumeroTarjeta.Substring(Model.NumeroTarjeta.Length - 4) 
        : Model.NumeroTarjeta;
}

<div class="container-artemis fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-credit-card"></i> Mi Tarjeta
        </h2>
        <a asp-action="Index" class="btn btn-outline-artemis">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <!-- Info de la Tarjeta -->
    <div class="card-artemis mb-4">
        <div class="card-header-artemis">
            <h5 class="mb-0">Tarjeta **** @ultimosCuatro</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <p class="mb-1 text-muted">Límite:</p>
                    <p class="mb-0 fw-bold">@Model.LimiteCredito.ToString("C2")</p>
                </div>
                <div class="col-md-4">
                    <p class="mb-1 text-muted">Deuda:</p>
                    <p class="mb-0 fw-bold text-danger">@Model.DeudaActual.ToString("C2")</p>
                </div>
                <div class="col-md-4">
                    <p class="mb-1 text-muted">Disponible:</p>
                    <p class="mb-0 fw-bold" style="color: var(--marron-principal);">@Model.CreditoDisponible.ToString("C2")</p>
                </div>
            </div>
            <p class="mb-0 text-muted">Vence: @Model.FechaExpiracion</p>
        </div>
    </div>

    <!-- Consumos -->
    <h4 class="mb-3">Tus Compras</h4>
    
    @if (Model.Consumos == null || !Model.Consumos.Any())
    {
        <div class="alert alert-artemis-info">
            <i class="bi bi-info-circle"></i> No hay compras registradas
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-artemis">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Comercio</th>
                        <th>Monto</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var consumo in Model.Consumos)
                    {
                        <tr>
                            <td>@consumo.FechaConsumo.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@consumo.NombreComercio</td>
                            <td>@consumo.Monto.ToString("C2")</td>
                            <td>
                                @if (consumo.EstadoConsumo == "APROBADO")
                                {
                                    <span class="badge-success">OK</span>
                                }
                                else
                                {
                                    <span class="badge-danger">@consumo.EstadoConsumo</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>