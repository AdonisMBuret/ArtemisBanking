@model ArtemisBanking.Application.ViewModels.Cliente.DetallePrestamoClienteViewModel

@{
    ViewData["Title"] = "Detalle de Préstamo";
}

<div class="container-artemis fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-cash-coin"></i> Mi Préstamo
        </h2>
        <a asp-action="Index" class="btn btn-outline-artemis">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <!-- Info del Préstamo -->
    <div class="card-artemis mb-4">
        <div class="card-header-artemis">
            <h5 class="mb-0">Préstamo @Model.NumeroPrestamo</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-1 text-muted">Monto Original:</p>
                    <p class="mb-0 fw-bold">@Model.MontoCapital.ToString("C2")</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1 text-muted">Tasa de Interés:</p>
                    <p class="mb-0 fw-bold">@Model.TasaInteresAnual.ToString("N2")%</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Cuotas -->
    <h4 class="mb-3">Tus Cuotas</h4>
    
    @if (Model.TablaAmortizacion == null || !Model.TablaAmortizacion.Any())
    {
        <div class="alert alert-artemis-info">
            <i class="bi bi-info-circle"></i> No hay cuotas registradas
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-artemis">
                <thead>
                    <tr>
                        <th>Cuota</th>
                        <th>Fecha</th>
                        <th>Monto</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int numero = 1;
                    }
                    @foreach (var cuota in Model.TablaAmortizacion)
                    {
                        <tr>
                            <td><strong>#@numero</strong></td>
                            <td>@cuota.FechaPago.ToString("dd/MM/yyyy")</td>
                            <td>@cuota.MontoCuota.ToString("C2")</td>
                            <td>
                                @if (cuota.EstaPagada)
                                {
                                    <span class="badge-success">Pagada</span>
                                }
                                else if (cuota.EstaAtrasada)
                                {
                                    <span class="badge-danger">Atrasada</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pendiente</span>
                                }
                            </td>
                        </tr>
                        numero++;
                    }
                </tbody>
            </table>
        </div>
    }
</div>