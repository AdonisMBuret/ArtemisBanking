@model ArtemisBanking.Application.ViewModels.Cliente.PagoPrestamoViewModel

@{
    ViewData["Title"] = "Pagar Préstamo";
}

<div class="container-artemis fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-artemis">
                <div class="card-header-artemis">
                    <h3 class="mb-0"><i class="bi bi-cash-coin"></i> Pagar Mi Préstamo</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-artemis-info mb-3">
                        <i class="bi bi-info-circle"></i> El pago se aplica a tus cuotas pendientes. Si sobra dinero, te lo devolvemos
                    </div>

                    <form asp-action="PagarPrestamo" method="post">
                        @Html.AntiForgeryToken()
                        
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-artemis-error">
                                <i class="bi bi-x-circle"></i> Revisa los campos marcados
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="PrestamoId" class="form-label-artemis">
                                Préstamo a pagar
                            </label>
                            <select asp-for="PrestamoId" class="form-select" asp-items="Model.PrestamosDisponibles">
                                <option value="">Elige tu préstamo...</option>
                            </select>
                            <span asp-validation-for="PrestamoId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CuentaOrigenId" class="form-label-artemis">
                                Pagar desde
                            </label>
                            <select asp-for="CuentaOrigenId" class="form-select" asp-items="Model.CuentasDisponibles">
                                <option value="">Elige una cuenta...</option>
                            </select>
                            <span asp-validation-for="CuentaOrigenId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Monto" class="form-label-artemis">
                                Cuánto pagas
                            </label>
                            <input asp-for="Monto" class="form-control" type="number" step="0.01" 
                                   placeholder="0.00" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-artemis">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-artemis-primary">
                                <i class="bi bi-check-circle"></i> Pagar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}