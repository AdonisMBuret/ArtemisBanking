@model ArtemisBanking.Application.ViewModels.Cliente.PagoPrestamoViewModel
@{
    ViewData["Title"] = "Pagar Préstamo";
}

<div class="container-artemis fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card-artemis">
                <div class="card-header-artemis">
                    <h3 class="mb-0"><i class="bi bi-cash-stack me-2"></i>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="PagarPrestamo" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-artemis-error" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="PrestamoId" class="form-label-artemis"></label>
                            <select asp-for="PrestamoId" class="form-select form-control-artemis" asp-items="Model.PrestamosDisponibles">
                                <option value="">Seleccione un préstamo...</option>
                            </select>
                            <span asp-validation-for="PrestamoId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CuentaOrigenId" class="form-label-artemis"></label>
                            <select asp-for="CuentaOrigenId" class="form-select form-control-artemis" asp-items="Model.CuentasDisponibles">
                                <option value="">Pagar desde...</option>
                            </select>
                            <span asp-validation-for="CuentaOrigenId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Monto" class="form-label-artemis"></label>
                            <input asp-for="Monto" class="form-control form-control-artemis" type="number" step="0.01" placeholder="Ej: 2500.00" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                            <small class="form-text text-muted">El pago se aplica a cuotas completas. Si sobra, se devuelve a su cuenta.</small>
                        </div>

                        <div class="d-flex justify-content-between gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-artemis">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-artemis-primary">
                                <i class="bi bi-wallet-fill me-2"></i>Realizar Pago
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}