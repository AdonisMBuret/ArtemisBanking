@model ArtemisBanking.Application.ViewModels.Cliente.AvanceEfectivoViewModel
@{
    ViewData["Title"] = "Avance de Efectivo";
}

<div class="container-artemis fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-artemis">
                <div class="card-header-artemis">
                    <h3 class="mb-0"><i class="bi bi-cash-stack"></i> Avance de Efectivo</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-artemis-warning mb-3">
                        <i class="bi bi-exclamation-triangle"></i> Se cobra un interés del <strong>6.25%</strong> que se suma a tu deuda
                    </div>

                    <form asp-action="AvanceEfectivo" method="post">
                        @Html.AntiForgeryToken()
                        
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-artemis-error">
                                <i class="bi bi-x-circle"></i> Revisa los campos marcados
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="TarjetaId" class="form-label-artemis">
                                Tu tarjeta
                            </label>
                            <select asp-for="TarjetaId" class="form-select" asp-items="Model.TarjetasDisponibles">
                                <option value="">Elige...</option>
                            </select>
                            <span asp-validation-for="TarjetaId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CuentaDestinoId" class="form-label-artemis">
                                Depositar en
                            </label>
                            <select asp-for="CuentaDestinoId" class="form-select" asp-items="Model.CuentasDisponibles">
                                <option value="">Elige...</option>
                            </select>
                            <span asp-validation-for="CuentaDestinoId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Monto" class="form-label-artemis">
                                Cuánto necesitas
                            </label>
                            <input asp-for="Monto" class="form-control" type="number" step="0.01" 
                                   placeholder="0.00" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-artemis">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-artemis-primary">
                                <i class="bi bi-check-circle"></i> Solicitar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}