@model ArtemisBanking.Application.ViewModels.Cliente.AvanceEfectivoViewModel
@{
    ViewData["Title"] = "Avance de Efectivo";
}

<div class="container-artemis fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card-artemis">
                <div class="card-header-artemis">
                    <h3 class="mb-0"><i class="bi bi-cash-coin me-2"></i>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AvanceEfectivo" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-artemis-error" role="alert"></div>

                        <div class="alert alert-artemis-info">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            Se aplicará un interés del <strong>6.25%</strong> sobre el monto del avance, el cual se sumará a la deuda de su tarjeta.
                        </div>

                        <div class="mb-3">
                            <label asp-for="TarjetaId" class="form-label-artemis"></label>
                            <select asp-for="TarjetaId" class="form-select form-control-artemis" asp-items="Model.TarjetasDisponibles">
                                <option value="">Seleccione una tarjeta...</option>
                            </select>
                            <span asp-validation-for="TarjetaId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CuentaDestinoId" class="form-label-artemis"></label>
                            <select asp-for="CuentaDestinoId" class="form-select form-control-artemis" asp-items="Model.CuentasDisponibles">
                                <option value="">Depositar en...</option>
                            </select>
                            <span asp-validation-for="CuentaDestinoId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Monto" class="form-label-artemis"></label>
                            <input asp-for="Monto" class="form-control form-control-artemis" type="number" step="0.01" placeholder="Ej: 1000.00" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-artemis">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-artemis-primary">
                                <i class="bi bi-wallet-fill me-2"></i>Solicitar Avance
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}