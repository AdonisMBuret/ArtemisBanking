@model ArtemisBanking.Application.ViewModels.TarjetaCredito.EditarTarjetaViewModel
@{
    ViewData["Title"] = "Editar Tarjeta de Crédito";
}

<div class="container-artemis fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-artemis">
                <div class="card-header-artemis">
                    <h3 class="mb-0">Editar Límite de Tarjeta</h3>
                </div>
                <div class="card-body">

                    <form asp-action="EditarTarjeta" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <!-- Mensaje de error general -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-artemis-error" role="alert"></div>

                        <!-- Información de la Tarjeta (Solo lectura) -->
                        <h5 class="text-artemis-secondary mb-3">Información de la Tarjeta</h5>
                        <div class="bg-artemis-light p-3 rounded mb-4">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Tarjeta Nro:</dt>
                                <dd class="col-sm-8">**** **** **** @Model.UltimosCuatroDigitos</dd>

                                <dt class="col-sm-4">Cliente:</dt>
                                <dd class="col-sm-8">@Model.NombreCliente</dd>

                                <dt class="col-sm-4">Deuda Actual:</dt>
                                <dd class="col-sm-8 fw-bold text-danger">@Model.DeudaActual.ToString("C2")</dd>
                            </dl>
                        </div>

                        <hr class="my-4">

                        <!-- Campo para editar -->
                        <div class="mb-3">
                            <label asp-for="LimiteCredito" class="form-label-artemis"></label>
                            <input asp-for="LimiteCredito" class="form-control form-control-artemis" type="number" step="100" />
                            <span asp-validation-for="LimiteCredito" class="text-danger"></span>
                            <small class="form-text text-muted">
                                El nuevo límite no puede ser inferior a la deuda actual.
                            </small>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Tarjetas" class="btn btn-outline-artemis">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-artemis-primary">
                                <i class="bi bi-save-fill me-2"></i>Actualizar Límite
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
