@model ArtemisBanking.Application.ViewModels.Usuario.EditarUsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container-artemis fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-artemis">
                <div class="card-header-artemis">
                    <h3 class="mb-0">Editar Usuario: @Model.NombreUsuario</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditarUsuario" method="post" asp-route-id="@Model.Id">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="TipoUsuario" />

                        <!-- Mensaje de error general -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-artemis-error" role="alert"></div>

                        <h5 class="text-artemis-secondary mb-3">Datos Personales</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label-artemis"></label>
                                <input asp-for="Nombre" class="form-control form-control-artemis" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Apellido" class="form-label-artemis"></label>
                                <input asp-for="Apellido" class="form-control form-control-artemis" />
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Cedula" class="form-label-artemis"></label>
                            <input asp-for="Cedula" class="form-control form-control-artemis" />
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <h5 class="text-artemis-secondary mb-3">Datos de Acceso</h5>
                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label-artemis"></label>
                            <input asp-for="Correo" class="form-control form-control-artemis" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NombreUsuario" class="form-label-artemis"></label>
                            <input asp-for="NombreUsuario" class="form-control form-control-artemis" />
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NuevaContrasena" class="form-label-artemis"></label>
                            <input asp-for="NuevaContrasena" class="form-control form-control-artemis" type="password" placeholder="Dejar en blanco para no cambiar" />
                            <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label-artemis">Tipo de Usuario</label>
                            <input class="form-control form-control-artemis" value="@Model.TipoUsuario" readonly disabled />
                            <small class="form-text text-muted">El tipo de usuario no se puede modificar.</small>
                        </div>

                        <!-- Campo Monto Adicional (solo para Clientes) -->
                        @if (Model.TipoUsuario == "Cliente")
                        {
                            <hr class="my-4">
                            <h5 class="text-artemis-secondary mb-3">Finanzas (Solo Clientes)</h5>
                            <div class="mb-3">
                                <label asp-for="MontoAdicional" class="form-label-artemis"></label>
                                <input asp-for="MontoAdicional" class="form-control form-control-artemis" type="number" step="0.01" />
                                <span asp-validation-for="MontoAdicional" class="text-danger"></span>
                                <small class="form-text text-muted">Este monto se sumará al balance actual de la cuenta principal del cliente.</small>
                            </div>
                        }

                        <!-- Botones de Acción -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Usuarios" class="btn btn-outline-artemis">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-artemis-primary">
                                <i class="bi bi-save-fill me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}