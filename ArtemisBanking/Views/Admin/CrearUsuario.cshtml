@model ArtemisBanking.Application.ViewModels.Usuario.CrearUsuarioViewModel

@{
    ViewData["Title"] = "Crear Nuevo Usuario";
}

<div class="container-artemis fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-artemis">
                <div class="card-header-artemis">
                    <h3 class="mb-0">Crear Nuevo Usuario</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CrearUsuario" method="post">
                        <!-- Mensaje de error general -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-artemis-error" role="alert"></div>

                        <h5 class="text-artemis-secondary mb-3">Datos Personales</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label-artemis"></label>
                                <input asp-for="Nombre" class="form-control form-control-artemis" placeholder="Ej: Juan" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Apellido" class="form-label-artemis"></label>
                                <input asp-for="Apellido" class="form-control form-control-artemis" placeholder="Ej: Pérez" />
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Cedula" class="form-label-artemis"></label>
                            <input asp-for="Cedula" class="form-control form-control-artemis" placeholder="Ej: 00112345678" />
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <h5 class="text-artemis-secondary mb-3">Datos de Acceso</h5>
                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label-artemis"></label>
                            <input asp-for="Correo" class="form-control form-control-artemis" placeholder="Ej: usuario@correo.com" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NombreUsuario" class="form-label-artemis"></label>
                            <input asp-for="NombreUsuario" class="form-control form-control-artemis" placeholder="Ej: juanperez" />
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Contrasena" class="form-label-artemis"></label>
                                <input asp-for="Contrasena" class="form-control form-control-artemis" type="password" />
                                <span asp-validation-for="Contrasena" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmarContrasena" class="form-label-artemis"></label>
                                <input asp-for="ConfirmarContrasena" class="form-control form-control-artemis" type="password" />
                                <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class_="my-4">

                        <h5 class="text-artemis-secondary mb-3">Configuración de Cuenta</h5>
                        <div class="mb-3">
                            <label asp-for="TipoUsuario" class="form-label-artemis"></label>
                            <select asp-for="TipoUsuario" id="tipoUsuarioSelect" class="form-select form-control-artemis">
                                <option value="">Seleccione un rol...</option>
                                <option value="Administrador">Administrador</option>
                                <option value="Cajero">Cajero</option>
                                <option value="Cliente">Cliente</option>
                            </select>
                            <span asp-validation-for="TipoUsuario" class="text-danger"></span>
                        </div>

                        <!-- Este campo solo aparece si se selecciona "Cliente" -->
                        <div class="mb-3" id="montoInicialContainer" style="display: none;">
                            <label asp-for="MontoInicial" class="form-label-artemis"></label>
                            <input asp-for="MontoInicial" class="form-control form-control-artemis" type="number" step="0.01" />
                            <span asp-validation-for="MontoInicial" class="text-danger"></span>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Usuarios" class="btn btn-outline-artemis">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-artemis-primary">
                                <i class="bi bi-person-plus-fill me-2"></i>Crear Usuario
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Script para mostrar/ocultar el monto inicial
        $(document).ready(function () {
            // Función para verificar el select
            function toggleMontoInicial() {
                if ($("#tipoUsuarioSelect").val() === "Cliente") {
                    $("#montoInicialContainer").slideDown();
                } else {
                    $("#montoInicialContainer").slideUp();
                }
            }

            // Verificar al cargar la página (en caso de error de validación)
            toggleMontoInicial();

            // Verificar cada vez que cambia el select
            $("#tipoUsuarioSelect").change(function () {
                toggleMontoInicial();
            });
        });
    </script>
}