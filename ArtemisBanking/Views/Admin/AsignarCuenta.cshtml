@model ArtemisBanking.Application.ViewModels.CuentaAhorro.SeleccionarClienteCuentaViewModel

@{
    ViewData["Title"] = "Asignar Cuenta - Paso 1";
}

<div class="container-artemis fade-in">
    <h2 class="text-artemis-primary mb-4">Asignar Cuenta Secundaria: Seleccionar Cliente</h2>

    <!-- Formulario para seleccionar cliente -->
    <form asp-action="ConfigurarCuenta" method="post">
        @Html.AntiForgeryToken()

        <div class="card-artemis">
            <div class="card-header-artemis">
                <h5 class="mb-0">Clientes Activos</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Seleccione el cliente al que desea asignar una nueva cuenta de ahorro secundaria.</p>


                <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                    <table class="table table-artemis table-hover align-middle">
                        <thead class="table-dark sticky-top">
                            <tr>
                                <th></th> <!-- Para el Radio Button -->
                                <th>Cédula</th>
                                <th>Nombre Completo</th>
                                <th>Correo</th>
                                <th>Deuda Total Actual</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Clientes == null || !Model.Clientes.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center">No hay clientes activos disponibles.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var cliente in Model.Clientes)
                                {
                                    <tr>
                                        <td>
                                            <input type="radio" name="clienteId" value="@cliente.Id" class="form-check-input" required />
                                        </td>
                                        <td>@cliente.Cedula</td>
                                        <td>@cliente.NombreCompleto</td>
                                        <td>@cliente.Correo</td>
                                        <td class="fw-bold">@cliente.DeudaTotal.ToString("C2")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a asp-action="Cuentas" class="btn btn-outline-artemis">
                    <i class="bi bi-arrow-left-circle me-2"></i>Volver al Listado
                </a>
                <button type="submit" class="btn btn-artemis-primary">
                    Siguiente Paso<i class="bi bi-arrow-right-circle ms-2"></i>
                </button>
            </div>
        </div>
    </form>
</div>