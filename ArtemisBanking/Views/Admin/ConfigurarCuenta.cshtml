@model ArtemisBanking.Application.ViewModels.CuentaAhorro.ConfigurarCuentaViewModel
@{
    ViewData["Title"] = "Asignar Cuenta - Paso 2";
}

<div class="container-artemis fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-artemis">
                <div class="card-header-artemis">
                    <h3 class="mb-0">Configurar Cuenta Secundaria</h3>
                </div>
                <div class="card-body">
                    <!-- Formulario de Configuración -->
                    <form asp-action="ProcesarAsignacionCuenta" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ClienteId" />
                        <input type="hidden" asp-for="NombreCliente" />

                        <!-- Mensaje de error general -->
                        <div asp-validation-summary="All" class="alert alert-artemis-error" role="alert"></div>

                        <!-- Info del Cliente -->
                        <h5 class="text-artemis-secondary mb-3">Cliente Seleccionado</h5>
                        <div class="bg-artemis-light p-3 rounded mb-4">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Nombre:</dt>
                                <dd class="col-sm-8">@Model.NombreCliente</dd>
                            </dl>
                        </div>

                        <hr class="my-4">

                        <!-- Configuración de la Cuenta -->
                        <h5 class="text-artemis-secondary mb-3">Detalles de la Cuenta</h5>
                        <div class="mb-3">
                            <label asp-for="BalanceInicial" class="form-label-artemis"></label>
                            <input asp-for="BalanceInicial" class="form-control form-control-artemis" type="number" step="0.01" value="0.00" />
                            <span asp-validation-for="BalanceInicial" class="text-danger"></span>
                            <small class="form-text text-muted">Este campo es opcional y puede dejarse en 0.00.</small>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="d-flex justify-content-between gap-2 mt-4">
                            <a asp-action="AsignarCuenta" class="btn btn-outline-artemis">
                                <i class="bi bi-arrow-left-circle me-2"></i>Volver (Seleccionar Cliente)
                            </a>
                            <button type="submit" class="btn btn-artemis-primary">
                                <i class="bi bi-check-circle-fill me-2"></i>Asignar Cuenta
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}