@model ArtemisBanking.Web.ViewModels.Usuario.ListaUsuariosViewModel

@{
    ViewData["Title"] = "Gestión de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ==================== GESTIÓN DE USUARIOS ==================== -->
<!-- Encabezado -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="text-primary-artemis mb-1">
                    <i class="fas fa-users me-2"></i>
                    Gestión de Usuarios
                </h2>
                <p class="text-muted mb-0">
                    <i class="fas fa-list me-2"></i>
                    Administrar usuarios del sistema
                </p>
            </div>
            <div>
                <!-- Botón para crear nuevo usuario -->
                <a asp-action="CrearUsuario" class="btn btn-primary-artemis">
                    <i class="fas fa-user-plus me-2"></i>
                    Crear Nuevo Usuario
                </a>
            </div>
        </div>
        <hr style="border-color: var(--color-gray);">
    </div>
</div>

<!-- ==================== FILTROS ==================== -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card-artemis">
            <div class="card-artemis-body p-3">
                <form method="get" asp-action="Usuarios">
                    <div class="row align-items-end">
                        <!-- Filtro por Rol -->
                        <div class="col-md-6 col-lg-4 mb-2 mb-md-0">
                            <label class="form-label-artemis">
                                <i class="fas fa-filter me-2"></i>
                                Filtrar por Rol
                            </label>
                            <select name="rol" class="form-control form-control-artemis" onchange="this.form.submit()">
                                <option value="">Todos los roles</option>
                                <option value="Administrador" selected="@(Model.FiltroRol == "Administrador")">Administrador</option>
                                <option value="Cajero" selected="@(Model.FiltroRol == "Cajero")">Cajero</option>
                                <option value="Cliente" selected="@(Model.FiltroRol == "Cliente")">Cliente</option>
                            </select>
                        </div>

                        <!-- Botón limpiar filtros -->
                        <div class="col-md-6 col-lg-4">
                            @if (!string.IsNullOrEmpty(Model.FiltroRol))
                            {
                                <a asp-action="Usuarios" class="btn btn-outline-artemis">
                                    <i class="fas fa-times me-2"></i>
                                    Limpiar Filtros
                                </a>
                            }
                        </div>

                        <!-- Contador de resultados -->
                        <div class="col-lg-4 text-end">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Mostrando @Model.Usuarios.Count() de @Model.TotalRegistros usuarios
                            </small>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- ==================== TABLA DE USUARIOS ==================== -->
<div class="row">
    <div class="col-12">
        <div class="card-artemis">
            <div class="card-artemis-header">
                <i class="fas fa-table me-2"></i>
                Lista de Usuarios
            </div>
            <div class="card-artemis-body p-0">
                @if (Model.Usuarios.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-artemis mb-0">
                            <thead>
                                <tr>
                                    <th>Usuario</th>
                                    <th>Cédula</th>
                                    <th>Nombre Completo</th>
                                    <th>Correo</th>
                                    <th>Tipo</th>
                                    <th>Estado</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usuario in Model.Usuarios)
                                {
                                    <tr>
                                        <!-- Usuario -->
                                        <td>
                                            <i class="fas fa-user-circle me-2 text-primary-artemis"></i>
                                            <strong>@usuario.NombreUsuario</strong>
                                        </td>

                                        <!-- Cédula -->
                                        <td>@usuario.Cedula</td>

                                        <!-- Nombre Completo -->
                                        <td>@usuario.NombreCompleto</td>

                                        <!-- Correo -->
                                        <td>
                                            <i class="fas fa-envelope me-1 text-muted"></i>
                                            @usuario.Correo
                                        </td>

                                        <!-- Tipo de Usuario -->
                                        <td>
                                            @if (usuario.TipoUsuario == "Administrador")
                                            {
                                                <span class="badge" style="background-color: var(--color-primary); color: white;">
                                                    <i class="fas fa-user-shield me-1"></i>
                                                    Administrador
                                                </span>
                                            }
                                            else if (usuario.TipoUsuario == "Cajero")
                                            {
                                                <span class="badge" style="background-color: var(--color-secondary); color: white;">
                                                    <i class="fas fa-cash-register me-1"></i>
                                                    Cajero
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge" style="background-color: var(--color-accent); color: white;">
                                                    <i class="fas fa-user me-1"></i>
                                                    Cliente
                                                </span>
                                            }
                                        </td>

                                        <!-- Estado -->
                                        <td>
                                            @if (usuario.EstaActivo)
                                            {
                                                <span class="badge badge-success-artemis">
                                                    <i class="fas fa-check-circle me-1"></i>
                                                    Activo
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger-artemis">
                                                    <i class="fas fa-times-circle me-1"></i>
                                                    Inactivo
                                                </span>
                                            }
                                        </td>

                                        <!-- Acciones -->
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <!-- Botón Editar -->
                                                @if (usuario.PuedeEditar)
                                                {
                                                    <a asp-action="EditarUsuario"
                                                       asp-route-id="@usuario.Id"
                                                       class="btn btn-sm btn-outline-artemis"
                                                       title="Editar Usuario">
                                                        <i class="fas fa-edit"></i>
                                                    </a>

                                                    <!-- Botón Cambiar Estado -->
                                                    <button type="button"
                                                            class="btn btn-sm btn-outline-artemis"
                                                            onclick="cambiarEstadoUsuario('@usuario.Id', @usuario.EstaActivo.ToString().ToLower())"
                                                            title="@(usuario.EstaActivo ? "Desactivar" : "Activar") Usuario">
                                                        <i class="fas fa-@(usuario.EstaActivo ? "ban" : "check")"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <span class="badge" style="background-color: var(--color-gray); color: var(--color-dark);">
                                                        <i class="fas fa-lock me-1"></i>
                                                        Usuario Actual
                                                    </span>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- ==================== PAGINACIÓN ==================== -->
                    @if (Model.TotalPaginas > 1)
                    {
                        <div class="card-footer" style="background-color: var(--color-light);">
                            <nav>
                                <ul class="pagination pagination-artemis justify-content-center mb-0">
                                    <!-- Botón Anterior -->
                                    <li class="page-item @(!Model.TienePaginaAnterior ? "disabled" : "")">
                                        <a class="page-link"
                                           asp-action="Usuarios"
                                           asp-route-pagina="@(Model.PaginaActual - 1)"
                                           asp-route-rol="@Model.FiltroRol">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>

                                    <!-- Números de página -->
                                    @for (int i = 1; i <= Model.TotalPaginas; i++)
                                    {
                                        <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                                            <a class="page-link"
                                               asp-action="Usuarios"
                                               asp-route-pagina="@i"
                                               asp-route-rol="@Model.FiltroRol">
                                                @i
                                            </a>
                                        </li>
                                    }

                                    <!-- Botón Siguiente -->
                                    <li class="page-item @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                                        <a class="page-link"
                                           asp-action="Usuarios"
                                           asp-route-pagina="@(Model.PaginaActual + 1)"
                                           asp-route-rol="@Model.FiltroRol">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    }
                }
                else
                {
                    <!-- Mensaje cuando no hay usuarios -->
                    <div class="text-center py-5">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No hay usuarios registrados</h5>
                        <p class="text-muted">
                            @if (!string.IsNullOrEmpty(Model.FiltroRol))
                            {
                                <text>No se encontraron usuarios con el rol seleccionado.</text>
                            }
                            else
                            {
                                <text>Crea el primer usuario usando el botón de arriba.</text>
                            }
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- ==================== SCRIPTS ==================== -->
@section Scripts {
    <script>
        // Función para cambiar el estado del usuario (activar/desactivar)
        function cambiarEstadoUsuario(usuarioId, estaActivo) {
            const accion = estaActivo ? 'desactivar' : 'activar';
            const mensaje = `¿Está seguro que desea ${accion} este usuario?`;

            if (confirm(mensaje)) {
                // Realizar petición AJAX para cambiar el estado
                fetch('@Url.Action("CambiarEstadoUsuario", "Admin")/' + usuarioId, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': '@GetAntiForgeryToken()'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.exito) {
                        // Recargar la página para mostrar los cambios
                        location.reload();
                    } else {
                        alert(data.mensaje || 'Error al cambiar el estado del usuario');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Ocurrió un error al cambiar el estado del usuario');
                });
            }
        }

        // Función auxiliar para obtener el token antiforgery
        function GetAntiForgeryToken() {
            return document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
        }
    </script>
}