@model ArtemisBanking.Application.ViewModels.DashboardCajeroViewModel
@{
    ViewData["Title"] = "Panel Cajero";
}

<div class="container-artemis fade-in">
    <h2 class="mb-4">
        <i class="bi bi-speedometer2"></i> Resumen de Hoy
    </h2>

    <!-- Indicadores del Día -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="indicator-card">
                <div class="indicator-icon">
                    <i class="bi bi-arrow-left-right"></i>
                </div>
                <div class="indicator-value">@Model.TransaccionesDelDia</div>
                <div class="indicator-label">Transacciones</div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="indicator-card">
                <div class="indicator-icon">
                    <i class="bi bi-wallet2"></i>
                </div>
                <div class="indicator-value">@Model.PagosDelDia</div>
                <div class="indicator-label">Pagos Procesados</div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="indicator-card">
                <div class="indicator-icon">
                    <i class="bi bi-arrow-down-circle"></i>
                </div>
                <div class="indicator-value">@Model.DepositosDelDia</div>
                <div class="indicator-label">Depósitos</div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="indicator-card">
                <div class="indicator-icon">
                    <i class="bi bi-arrow-up-circle"></i>
                </div>
                <div class="indicator-value">@Model.RetirosDelDia</div>
                <div class="indicator-label">Retiros</div>
            </div>
        </div>
    </div>

    <!-- Acciones Rápidas -->
    <h4 class="mb-3">Acciones Rápidas</h4>
    <div class="row">
        <div class="col-md-4 mb-3">
            <a asp-action="Deposito" class="btn btn-artemis-primary btn-lg w-100">
                <i class="bi bi-arrow-down-circle me-2"></i>Hacer Depósito
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-action="Retiro" class="btn btn-artemis-secondary btn-lg w-100">
                <i class="bi bi-arrow-up-circle me-2"></i>Hacer Retiro
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-action="TransaccionTerceros" class="btn btn-outline-artemis btn-lg w-100">
                <i class="bi bi-arrow-left-right me-2"></i>Transferir
            </a>
        </div>
    </div>
</div>