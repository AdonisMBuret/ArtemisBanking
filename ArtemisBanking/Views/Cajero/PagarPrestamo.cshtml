@model ArtemisBanking.Application.ViewModels.Cajero.PagoPrestamoCajeroViewModel
@{
    ViewData["Title"] = "Pagar Préstamo";
}

<div class="container-artemis fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card-artemis">
                <div class="card-header-artemis">
                    <h3 class="mb-0">
                        <i class="bi bi-cash-stack me-2"></i>Pagar Préstamo
                    </h3>
                </div>
                <div class="card-body">
                    <p class="text-muted">Pago de préstamo desde una cuenta de ahorros.</p>

                    <!-- Formulario de Pago -->
                    <form asp-action="PagarPrestamo" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Mensaje de error general -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-artemis-error" role="alert"></div>

                        <!-- Campo: Número de Cuenta Origen -->
                        <div class="mb-3">
                            <label asp-for="NumeroCuentaOrigen" class="form-label-artemis"></label>
                            <input asp-for="NumeroCuentaOrigen" class="form-control form-control-artemis" placeholder="9 dígitos de la cuenta de débito" />
                            <span asp-validation-for="NumeroCuentaOrigen" class="text-danger"></span>
                        </div>

                        <!-- Campo: Número de Préstamo -->
                        <div class="mb-3">
                            <label asp-for="NumeroPrestamo" class="form-label-artemis"></label>
                            <input asp-for="NumeroPrestamo" class="form-control form-control-artemis" placeholder="9 dígitos del préstamo" />
                            <span asp-validation-for="NumeroPrestamo" class="text-danger"></span>
                        </div>

                        <!-- Campo: Monto a Pagar -->
                        <div class="mb-3">
                            <label asp-for="Monto" class="form-label-artemis"></label>
                            <input asp-for="Monto" class="form-control form-control-artemis" type="number" step="0.01" placeholder="Ej: 1500.00" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                            <small class="form-text text-muted">El pago se aplica a las cuotas pendientes. Si sobra dinero, se devuelve a la cuenta.</small>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="d-flex justify-content-between gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-artemis">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-artemis-primary">
                                <i class="bi bi-check-circle-fill me-2"></i>Procesar Pago
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}