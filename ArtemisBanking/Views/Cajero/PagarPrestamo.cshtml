@model ArtemisBanking.Application.ViewModels.Cajero.PagoPrestamoCajeroViewModel

@{
    ViewData["Title"] = "Pagar Préstamo";
}

<div class="container-artemis fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-artemis">
                <div class="card-header-artemis">
                    <h3 class="mb-0">
                        <i class="bi bi-cash-coin"></i> Pagar Préstamo
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-artemis-info mb-3">
                        <i class="bi bi-info-circle"></i> El pago se aplica a las cuotas. Si sobra dinero, se devuelve a la cuenta
                    </div>

                    <form asp-action="PagarPrestamo" method="post">
                        @Html.AntiForgeryToken()

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-artemis-error">
                                <i class="bi bi-x-circle"></i> Revisa los campos marcados
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="NumeroCuentaOrigen" class="form-label-artemis">
                                Cuenta del cliente
                            </label>
                            <input asp-for="NumeroCuentaOrigen" class="form-control" 
                                   placeholder="123456789" maxlength="9" />
                            <span asp-validation-for="NumeroCuentaOrigen" class="text-danger"></span>
                            <small class="text-muted">9 dígitos</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NumeroPrestamo" class="form-label-artemis">
                                Número de préstamo
                            </label>
                            <input asp-for="NumeroPrestamo" class="form-control" 
                                   placeholder="123456789" maxlength="9" />
                            <span asp-validation-for="NumeroPrestamo" class="text-danger"></span>
                            <small class="text-muted">9 dígitos</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Monto" class="form-label-artemis">
                                Cuánto paga
                            </label>
                            <input asp-for="Monto" class="form-control" type="number" step="0.01" 
                                   placeholder="0.00" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-artemis">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-artemis-primary">
                                <i class="bi bi-check-circle"></i> Procesar Pago
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}