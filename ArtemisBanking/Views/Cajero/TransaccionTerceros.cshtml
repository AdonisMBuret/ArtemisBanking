@model ArtemisBanking.Application.ViewModels.Cajero.TransaccionTercerosCajeroViewModel
@{
    ViewData["Title"] = "Transacción a Terceros";
}

<div class="container-artemis fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card-artemis">
                <div class="card-header-artemis" style="background: var(--morado-oscuro);">
                    <h3 class="mb-0">
                        <i class="bi bi-arrow-left-right me-2"></i>Transacción a Terceros
                    </h3>
                </div>
                <div class="card-body">
                    <p class="text-muted">Transferencia de fondos entre dos cuentas de clientes.</p>

                    <!-- Formulario de Transacción -->
                    <form asp-action="TransaccionTerceros" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Mensaje de error general -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-artemis-error" role="alert"></div>

                        <!-- Campo: Número de Cuenta Origen -->
                        <div class="mb-3">
                            <label asp-for="NumeroCuentaOrigen" class="form-label-artemis"></label>
                            <input asp-for="NumeroCuentaOrigen" class="form-control form-control-artemis" placeholder="9 dígitos de la cuenta de débito" />
                            <span asp-validation-for="NumeroCuentaOrigen" class="text-danger"></span>
                        </div>

                        <!-- Campo: Número de Cuenta Destino -->
                        <div class="mb-3">
                            <label asp-for="NumeroCuentaDestino" class="form-label-artemis"></label>
                            <input asp-for="NumeroCuentaDestino" class="form-control form-control-artemis" placeholder="9 dígitos de la cuenta de crédito" />
                            <span asp-validation-for="NumeroCuentaDestino" class="text-danger"></span>
                        </div>

                        <!-- Campo: Monto a Transferir -->
                        <div class="mb-3">
                            <label asp-for="Monto" class="form-label-artemis"></label>
                            <input asp-for="Monto" class="form-control form-control-artemis" type="number" step="0.01" placeholder="Ej: 200.00" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="d-flex justify-content-between gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-artemis">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-artemis-secondary">
                                <i class="bi bi-check-circle-fill me-2"></i>Procesar Transacción
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}